<%- include('./common/header.ejs')  %>
      
<div class="container">
<h1>文章列表</h1>
    <div class="list-group" style="margin-bottom:0">
        <% for(let i = 0; i < data.length; i++) { %>
        <a class="list-group-item" href="/publish/content/<%= data[i].id %>">
        <%= data[i].content %>
        <span class="badge" style="background-color:chartreuse">发表时间 <%=data[i].ctime %></span>
         <span class="badge" style="background-color: darkorange">作者: <%=data[i].nickname %></span>
        </a>
        <% } %>
    </div>
    <style>
      .none{
        display: none;
      }
    </style>
       <!-- /* style="display: <%= (page-1<1) ? 'none' : 'block' %>" */ -->
    <nav aria-label="Page navigation">
            <ul class="pagination">
              <li>
                <a href="/?page=<%= page - 1  %>" aria-label="Previous" class="<%= page-1<1 ? 'none' : '' %>">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <% for(let i = 1; i <= pageNum; i++ ) { %>
              <li class="<%= page == i ? "active" : "" %>"><a href="/?page=<%= i %>"><%= i %></a></li>
              <% } %>
              <li>
                <a href="/?page=<%= page + 1 %>" aria-label="Next" class="<%= page >= pageNum ? 'none' : '' %>">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
</div>

<%- include('./common/footer.ejs') %>


